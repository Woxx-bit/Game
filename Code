import random  

# 1. Генерация случайного числа от 1 до 100
secret_number = random.randint(1, 100) 
print(f"Число сгенерировано! (от 1 до 100)")

while True:  # Бесконечный цикл для повторных попыток при некорректном вводе
    try:
        # input() запрашивает ввод от пользователя, возвращает строку
        user_input = input("Введите число от 1 до 100: ")
        
        user_number = int(user_input)
        
        # Проверяем, что число в нужном диапазоне
        if 1 <= user_number <= 100:
            break  # Выходим из цикла при корректном вводе
        else:
            print("Ой, число должно быть от 1 до 100!")
            
    except ValueError:  # Обработка ошибки, если введено не число
        print("Нет, введите целое число!")

# Выводим результаты
print(f"Ваше число: {user_number}")
print(f"А мы загадали: {secret_number}")

# Дополнительно: сравнение чисел
if user_number == secret_number:
    print("Надо же! Вы угадали !")
elif user_number < secret_number:
    print(f"Ха-ха! Ваше число ({user_number}) меньше загаданного")
else:
    print(f"Упс, Ваше число ({user_number}) больше загаданного")
